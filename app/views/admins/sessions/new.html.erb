<div class="row justify-content-center">

  <div class="col-lg-7">

    <div class="card o-hidden border-0 shadow-lg my-5">

      <div class="card-body">
      
        <div class="row justify-content-center">

          <div class="col-md-7">

            <div class="p-4">

              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
              </div>
              
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email Address...", class: "form-control form-control-user" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, placeholder: "Password", class: "form-control form-control-user" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <label>
                    <%= f.check_box :remember_me %> Lembrar-me
                  </label>
                <% end %>

                <%= f.submit "Entrar", class: "btn btn-primary btn-user btn-block" %>

              <% end %>
                            
              <hr>

              <div class="text-center">
                <a class="small" href="forgot-password.html">Forgot Password?</a>
              </div>

              <div class="text-center">
                <a class="small" href="register.html">Create an Account!</a>
              </div>

            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>
