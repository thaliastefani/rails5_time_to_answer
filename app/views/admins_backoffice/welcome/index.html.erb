<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header mb-4">Seja bem-vindo!</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-sm font-weight-bold text-primary text-uppercase mb-1">Total de usuários do sistema</div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h3 mb-0 mr-3 font-weight-bold text-gray-800"><%= @total_users %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-sm font-weight-bold text-success text-uppercase mb-1">Total de questões do sistema</div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h3 mb-0 mr-3 font-weight-bold text-gray-800"><%= @total_questions %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="far fa-question-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>