<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="form-row">
    <div class="col-lg-12">

        <% if @subject.errors.any? %>
            <div class="alert alert-danger alert-dismissable p-2">
                <button type="button" class="close p-1" data-dismiss="alert" aria-hidden="true">Ã—</button>
                
                <ul>
                <% @subject.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %>
                </ul>
            </div>
        <% end %>
    
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-row">
                    <div class="col-lg-6">
                    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
                        
                            <div class="form-group">
                                <%= form.label :description %>
                                <%= form.text_field :description, class:"form-control", placeholder: t('placeholder.subject_description') %>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-default">
                                <%= t('buttons.save') %>
                            </button>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>